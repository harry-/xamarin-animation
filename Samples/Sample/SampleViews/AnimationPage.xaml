<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Sample.SampleViews.AnimationPage"
             xmlns:elements="clr-namespace:SkiaSharp.Elements;assembly=SkiaSharp.Elements"
             Title="Detail"
             >
<StackLayout HeightRequest="800" >
        <StackLayout Orientation="Horizontal">
            <Label x:Name="lblX" HorizontalOptions="FillAndExpand" Text="{Binding X}"/>
            <Button Text="go" x:Name="go" HorizontalOptions="FillAndExpand" />
        </StackLayout>
        <Button x:Name="btnUp" Text="Up"/>
    <Slider x:Name="sliderY" Minimum="-10" Maximum="10" Value="{Binding X, Mode=TwoWay}" ></Slider>
    <Switch x:Name="switchGravity" IsToggled="{Binding Gravity, Mode=TwoWay}"></Switch>
    <StackLayout Orientation="Horizontal">
            <Button x:Name="btnLeft" Text="Left"></Button>
            <Button x:Name="btnRight" Text="Right"></Button>
        </StackLayout>
    <Button x:Name="btnDown" Text="Down"></Button>
           
            <elements:CanvasView HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"  x:Name="canvas" Touch="Canvas_Touch" EnableTouchEvents="True" />
</StackLayout>


</ContentPage>